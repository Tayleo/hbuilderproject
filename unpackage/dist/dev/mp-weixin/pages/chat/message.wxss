page {
  height: 100%;
  background-color: #e3e3e3;
}
.content {
  height: 100%;
  background: #f4f4f4;
}
.chat {
  height: 1050rpx;
  background-color: #e3e3e3;
}
.chat .chat-main {
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-top: 40rpx;
  /* padding-bottom: 250rpx; */
  display: flex;
  flex-direction: column;
}
.chat .chat-ls .chat-time {
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.7);
  line-height: 34rpx;
  padding: 20rpx 0;
  text-align: center;
}
.chat .chat-ls .msg-m {
  display: flex;
  padding: 20rpx 0;
}
.chat .chat-ls .msg-m .user-img {
  flex: none;
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.chat .chat-ls .msg-m .message {
  flex: none;
  max-width: 480rpx;
}
.chat .chat-ls .msg-m .msg-text {
  font-size: 32rpx;
  color: #272832;
  line-height: 44rpx;
  padding: 18rpx 24rpx;
}
.chat .chat-ls .msg-m .msg-img {
  max-width: 400rpx;
  border-radius: 20rpx;
}
.chat .chat-ls .msg-left {
  flex-direction: row;
}
.chat .chat-ls .msg-left .msg-text {
  margin-left: 16rpx;
  background-color: #FFFFFF;
  border-radius: 0rpx 20rpx 20rpx 20rpx;
}
.chat .chat-ls .msg-left .msg-img {
  margin-left: 16rpx;
}
.chat .chat-ls .msg-right {
  flex-direction: row-reverse;
}
.chat .chat-ls .msg-right .msg-text {
  margin-right: 16rpx;
  background-color: #12AE85;
  border-radius: 20rpx 0rpx 20rpx 20rpx;
}
.chat .chat-ls .msg-right .msg-img {
  margin-right: 16rpx;
}
.chat .flex-column-center {
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed !important;
  background-color: #f3f3f3;
  border-radius: 10rpx;
  z-index: 9999999;
}
.chat .bottom-foot-char {
  background-color: #f1f1f1;
  padding: 20rpx 0 20rpx 0;
  flex-flow: row;
}
.chat .flex-row-around {
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.chat .dh-input {
  font-size: 30rpx;
  width: 560rpx;
  height: 70rpx;
  border-radius: 10rpx;
  padding-left: 15rpx;
  background-color: #FFFFFF;
}
.chat .voice-nv {
  font-size: 34rpx;
  width: 560rpx;
  height: 70rpx;
  font-weight: bold;
  border-radius: 10rpx;
  padding-left: 15rpx;
  padding-top: 17rpx;
  background-color: #FFFFFF;
  text-align: center;
  color: #333333;
}
.chat .tb-nv {
  width: 50rpx;
  height: 50rpx;
}

