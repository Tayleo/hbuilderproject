.submit {
  background-color: #E5E5E5;
  box-shadow: 0px -1px 0px 0px rgba(0, 0, 0, 0.1);
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 100;
  padding-bottom: 10rpx;
}
.submit-chat {
  width: 100%;
  display: flex;
  align-items: flex-end;
  box-sizing: border-box;
  padding: 14rpx 10rpx;
}
.submit-chat image {
  width: 56rpx;
  height: 56rpx;
  margin: 0 10rpx;
  flex: auto;
}
.submit-chat .btn {
  flex: auto;
  background-color: #E5E5E5;
  border-radius: 10rpx;
  padding: 4rpx;
  height: 90rpx;
  margin-top: 2rpx;
  max-height: 160rpx;
}
.submit-chat .record {
  text-align: center;
  font-size: 44rpx;
  color: rgba(39, 40, 50, 0.6);
  height: 91rpx;
  background-color: #FFFFFF;
}

